<!--MonAn-->
<section class="shop-area pt-100 pb-100">
    <div class="container">
        @*@Html.Action("SapXepMAPartial", "SanPham");*@
        <div class="woocommerce-topbar">
            <div class="row align-items-center">
                <div class="col-lg-8 col-md-7 col-sm-6">
                    <div class="woocommerce-result-count">
                        Đã tìm thấy kết quả: <span style="color:red">@ViewBag.loai </span>trong <span style="color:red">@ViewBag.tong</span> sản phẩm</p>

                    </div>
                </div>
                <div class="col-lg-4 col-md-5 col-sm-6">
                    <div class="woocommerce-topbar-ordering">
                        @*<a href="/SanPham/MonAnTheoLoai?id=1&sort=giamdantheogia ">Tăng dần</a>
                            <a href="/SanPham/MonAnTheoLoai?id=1&sort=tangdantheogia ">Giảm dần</a>*@
                        <select id="SapXepMA" onchange="sapxep()">
                            <option value="1" selected>Sắp xếp </option>
                            <option value="2">Giảm dần theo giá</option>
                            <option value="3">Tăng dần theo giá</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @Html.Action("SapXepMAPartial", "SanPham", new { @id = ViewBag.id, @sort = 1 })




        @*<div class="col-lg-12 col-md-12">
