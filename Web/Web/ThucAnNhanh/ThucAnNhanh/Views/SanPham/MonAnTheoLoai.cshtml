        <!--</div>-->
    </div>
</section>


@section script{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function sapxep () {
                var sapxep = $("#SapXepMA").val();
                $.ajax({
                    url: "/SanPham/SapXepMAPartial",
                    method: "post",
                    type: "html",
                    data: { id: "@ViewBag.id", sort: sapxep },
                    success: function (data) {
                        $("#SapXep").html(data)
                    }
                });
            
        }
    </script>
}




