
@{
    ViewBag.Title = "ChiTienMA";
    Layout = "~/Views/Shared/_LayoutShare2.cshtml";
}
@model ThucAnNhanh.Models.MonAn

<section class="product-details-area pt-100 pb-70">
    <div class="container">
        <!--Chi tiết món ăn-->
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                <div class="product-details-image">

                </div>
                <div class="product-details-image p-lg-5">
                    <img src="@Model.Anh" width="350" height="200" alt="image">
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="product-details-desc">
                    <h3>@Model.TenMA</h3>
                    <div class="price">
                        @if (Model.GiaBan == Model.GiaKhuyenMai)
                        {
                            <span class="new-price">@string.Format("{0:0,0}", @Model.GiaKhuyenMai)  VND</span>
                        }
                        else if (Model.GiaBan > Model.GiaKhuyenMai)
                        {
                            <span class="new-price">@string.Format("{0:0,0}", @Model.GiaKhuyenMai)  VND</span>
                            <br />
                            <span class="old-price">@string.Format("{0:0,0}", @Model.GiaBan)  VND</span>
                        }

                    </div>

                    <form action="/GioHang/ThemGioHangTT" method="post">
                    @Html.Hidden("id", Model.ID)
                    <div class="product-add-to-cart">
                        <div class="input-counter">
                            <span class="minus-btn">
                                <i class="bx bx-minus"></i>
                            </span>
                            <input type="text" min="1" max="30" readonly="readonly" name="txtsl" id="soluong" value="1">
                            <span class="plus-btn">
                                <i class="bx bx-plus"></i>
                            </span>

                        </div>
                        <button id="add-to-cart" class="default-btn"><i class="fas fa-cart-plus"></i>Thêm vào giỏ hàng</button>
                        <span style="top: 55.6419px; left: 120.745px;"></span>
                    </div>
                    <br />
                    <input type="text" id="idMA" value="@Model.ID" hidden="hidden" />
                    @*Url.Action("ThemGioHang", "GioHang",new { @id = Model.ID})*@

                    <div class="buy-checkbox-btn">
                        <div class="item">
                            <button type="submit"  class="btn btn-light">Thanh toán</button>
                            @*<a href="@Url.Action("ThemGioHang", "GioHang", new { @id = Model.ID,@sl = 1 , @strURL = Request.Url.ToString() })" class="btn btn-light">Thêm vào giỏ hàng</a>*@
                        </div>
                    </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="tab products-details-tab">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <ul class="tabs active">
                                <li class="current">
                                    <a href="#">
                                        <div class="dot"></div>
                                        Mô tả
                                    </a>
                                </li>
                                @*<li>
                                    <a href="#">
                                        <div class="dot"></div>
                                        Thành phần món ăn
                                    </a>
                                </li>*@
                                <li>
                                    @*<a href="#">
                                            <div class="dot"></div>
                                            Reviews
                                        </a>*@
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="tab_content">
                                <div class="tabs_item">
                                    <div class="products-details-tab-content">
                                        <p>@Model.MoTa</p>
                                    </div>
                                </div>
                                <div class="tabs_item">
                                    <div class="products-details-tab-content">
                                        <ul class="additional-information">
                                            
                                                <li>
                                                    <span>Brand:</span>
                                                    @ViewBag.tpma
                                                </li>
                                                <li>
                                                    <span>Color:</span>
                                                    Brown
                                                </li>
                                                <li>
                                                    <span>Size:</span>
                                                    Large, Medium
                                                </li>
                                                <li>
                                                    <span>Weight:</span>
                                                    27 kg
                                                </li>
                                                <li>
                                                    <span>Dimensions:</span>
                                                    22 x 123 cm
                                                </li>
                                            
                                        </ul>
                                    </div>
                                </div>
                                <div class="tabs_item">
                                    <div class="products-details-tab-content">
                                        <div class="product-review-form">
                                            <h3>Customer Reviews</h3>
                                            <div class="review-title">
                                                <div class="rating">
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="far fa-star"></i>
                                                </div>
                                                <p>Based on 3 reviews</p>
                                                <a href="#" class="default-btn">
                                                    Write a Review
                                                    <span></span>
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @Html.Action("SanPhamNoiBat", "SanPham")
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
