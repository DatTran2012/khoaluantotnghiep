
@{

    KhachHang kh = (KhachHang)Session["taikhoan"];
}
@{
    ViewBag.Title = "ThanhToanNgay";
    Layout = "~/Views/Shared/_LayoutShare2.cshtml";
}
@using ThucAnNhanh.Models
@model IEnumerable<ThucAnNhanh.Models.MonAn>
<section class="checkout-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="user-actions">
                    <i class="flaticon-share"></i>
                    <span>
                        @*Returning customer?
                            <a href="#">Click here to login</a>*@
                    </span>
                </div>
            </div>
        </div>
        <form action="/GioHang/ThanhToan" method="post">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="billing-details">
                        <h3 class="title">Thông tin thanh toán</h3>
                        <div class="row">
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>
                                        Tên khách hàng
                                        <span class="required">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="txtTenKH" value="@kh.TenKH">
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>
                                        Địa chỉ
                                        <span class="required">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="txtDiaChi" value="@kh.DiaChi">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>
                                        Email
                                        <span class="required">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="txtEmail" value="@kh.Email">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>
                                        Phone
                                        <span class="required">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="txtSDT" value="@kh.SDT">
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
<textarea name="txtGhiChu" cols="30" rows="5" placeholder="Ghi chú" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="order-details">
                        <h3 class="title">Thông tin đặt hàng</h3>
                        <div class="order-table table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Tên sản phẩm</th>
                                        <th scope="col">Số lượng</th>
                                        <th scope="col">Giá tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-name">
                                                <a href="#">@item.TenMA</a>
                                            </td>
                                            <td style="text-align:right" class="product-total">
                                                @*<span>@item.soluong</span>*@
                                            </td>
                                            <td class="product-total">
                                                <span class="subtotal-amount">@string.Format("{0:0,0}", item.GiaKhuyenMai) VNĐ</span>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="total-price"><span>Tổng cộng</span> </td>
                                        <td style="color:red;text-align:right">@ViewBag.TongSoLuong</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td class="total-price"><span>Tổng tiền</span></td>
                                        <td colspan="2" style="color:red;text-align:right" name="txtTongtien">@string.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="payment-box">
                            <div class="payment-method">

                                <p>
                                    <input type="radio" id="paypal" name="radio-group">
                                    <label for="paypal">Trả bằng thẻ</label>
                                </p>
                                <p>
                                    <input type="radio" id="cash-on-delivery" name="radio-group">
                                    <label for="cash-on-delivery">Ship code</label>
                                </p>
                            </div>
                            <button type="submit" class="default-btn order-btn">
                                Đặt hàng
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

