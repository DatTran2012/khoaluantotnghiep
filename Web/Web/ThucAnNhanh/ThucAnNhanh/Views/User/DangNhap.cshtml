
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutShare2.cshtml";
}
@using reCAPTCHA.MVC
@model ThucAnNhanh.Models.KhachHang
<div class="sign-in-area ptb-100">
    <div class="container">
        <div class="sign-in-form">
            <div class="sign-in-title">
                <h3>Chào mừng bạn đã đến với chúng tôi!</h3>
                <p>Vui lòng nhập tài khoản của bạn!</p>
            </div>
            @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
            {
                @*<form action="/User/DangNhap" method="post">*@
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="txtEmail" placeholder="Email" required>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", @style = "font-size: 12px" })

                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" name="txtMatKhau" placeholder="Password" required>
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger", @style = "font-size: 12px" })

                        </div>
                    </div>

                    <div class="col-lg-12">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="checkme">
                                <label class="form-check-label" for="checkme">Lưu tài khoản</label>
                            </div>
                        </div>
                    <div class="col-lg-12">
                        <p class="forgot-password"><a href="/User/ForgetPassWord">Quên mật khẩu?</a></p>
                    </div>
                    <br />
                    @Html.Recaptcha()
                    @Html.ValidationMessage("ReCaptcha", new { @class = "aler text-danger", @style = "font-size: 12px" })

                    <div class="col-lg-12">
                        <div class="send-btn">
                            <button type="submit" class="default-btn">
                                Đăng nhập
                                <span></span>
                            </button>
                        </div>
                        <br>
                        <span>Chưa có tài khoản? <a href="/User/DangKi">Đăng kí!</a></span>
                        <br />
                        <span style="color:red">  @ViewBag.thongbao</span>
                        @Html.ValidationSummary(true, "Vui lòng điền đây đủ thông tin", new { @class = "text-danger", @style = "font-size: 12px" })

                    </div>
                </div>
                @*</form>*@
            }

        </div>
    </div>
</div>

